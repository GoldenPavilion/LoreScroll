<%= form_for @story do |f| %>
    <%= f.label :title, "Title: " %>
    <%= f.text_field :title %><br>
    <%= f.label :medium, "Medium: " %>
    <%= f.select :medium, options_for_select([["Novel"], ["Tabletop RPG"], ["Screenplay"], ["Video Game"], ["Podcast"], ["Play"], ["Comic Book"], ["Other"]]) %><br>
    <%= f.label :summary, "Summary: " %><br>
    <%= f.text_area :summary %><br>
    <%= submit_tag "Create Story" %>
<% end %>
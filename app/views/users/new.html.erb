<div class="title-container">
    <h1>Become An Author</h1>
</div>

<%= render partial: 'shared/errors', locals: {object: @user} %>

<%= form_for @user do |f| %>
    <%= f.label :username, "Username: " %>
    <%= f.text_field :username %><br><br>
    <%= f.label :author_name, "Pseudonym/Author Name: " %>
    <%= f.text_field :author_name %><br><br>
    <%= f.label :email, "Contact E-mail: " %>
    <%= f.text_field :email %><br><br>
    <%= f.label :password, "Password: " %>
    <%= f.password_field :password %><br><br>
    <%= f.label :password_confirmation, "Password Confirmation: " %>
    <%= f.password_field :password_confirmation %><br><br>
    <%= submit_tag "Create Author" %>
<% end %>
<%= form_for @character do |f| %>
    <%= f.label :name, "Name: " %>
    <%= f.text_field :name, placeholder: "What do they go by?" %><br>
    <%= f.label :world_id, "Setting/World:" %>
    <%= f.collection_select :world_id, current_user.worlds, :id, :name %><br>
    <%= f.label :role, "Role: " %>
    <%= f.select :role, options_for_select([["Main Character"], ["Supporting Character"], ["Tertiary Character"], ["Single Appearance"], ["Mentioned"]]) %><br>
    <%= f.label :age, "Age: " %>
    <%= f.number_field :age %><br>
    <%= f.label :gender, "Gender: " %>
    <%= f.select :gender, options_for_select([["Female"], ["Male"], ["Non-Binary"], ["Other"]]) %><br>
    <%= f.label :species, "Species: " %>
    <%= f.text_field :species, placeholder: "Used for Fantasy/Sci-Fi" %><br>
    <%= f.label :job, "Job: " %>
    <%= f.text_field :job, placeholder: "What do they do?" %><br>
    <%= f.label :physical, "Physical Description: " %><br>
    <%= f.text_area :physical, placeholder: "What do they look like? What do they wear?" %><br>
    <%= f.label :description, "Personality Description: " %><br>
    <%= f.text_area :description, placeholder: "How do they carry themselves? How are they perceived by others?" %><br>
    <%= f.label :motivation, "Motivations: " %><br>
    <%= f.text_area :motivation, placeholder: "What drives them in your story?" %><br>
    <%= f.hidden_field :story_id %>
    <%= submit_tag "Forge Character" %>
<% end %>
<div class="title-container">
    <h1>Your Characters</h1>
</div>

<% flash.each do |type, msg| %>
    <div>
        <b><%= msg %></b>
    </div>
<% end %>
<br>
<% @characters.each do |c| %>
    <li><b><%= link_to c.name, story_character_path(c.story, c) %></b> (<%= c.role %>)</li>
<% end %>

<%= form_for @world do |f| %>
    <div class="form-group">
        <%= f.label :name, "Setting Name: " %><br>
        <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
        <%= f.label :scale, "Scale: " %>
        <%= f.select :scale, options_for_select([["Multiverse"], ["Universe"], ["Galaxy"], ["Planet"], ["Continent"], ["Nation"], ["Region"], ["City"], ["Town"], ["Building"], ["Vehicle"], ["Other"]], :selected=>@world.scale), class: "form-control" %><br>
    </div>

    <div class="form-group">
        <%= f.label :description, "Description:" %><br>
        <%= f.text_area :description, class: "form-control" %><br>
    </div>

    <%= submit_tag "Forge Your World", class: "btn btn-primary" %>
<% end %>
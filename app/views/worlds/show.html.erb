<div class="title-container">
    <h1><%= @world.name %></h1>
    <% if current_user.id == @world.user_id.to_i %>
        <p><%= link_to "Edit World", edit_world_path(@world), class: "btn btn-default" %>
        <%= link_to "Delete World", world_path(@world), method: :delete, class: "btn btn-default" %></p>
    <% end %>
</div>    
<p><b>Scale:</b> <%= @world.scale %></p>
<p><b>Characters of <%= @world.name %>: </b></p>
<% if @world.characters.empty? %>
    <p><i>No Characters Added to Associated Stories</i></p>
<% else %>
    <% @world.characters.order_by_name.each do |c| %>
        <ul>
            <li><%= link_to c.name, story_character_path(c.story, c) %></li>
        </ul>
    <% end %>
<% end %>
<p><b>Description:</b></p> 
<%= field_completed?(@world, :description, :empty?) %>